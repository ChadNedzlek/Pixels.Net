<Page x:Class="WpfUIDice.LogPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:WpfUIDice"
      mc:Ignorable="d"
      Title="Log" d:DesignWidth="800" d:DesignHeight="500">
    <Grid>
        <ListBox ItemsSource="{Binding RelativeSource={RelativeSource AncestorType=local:LogPage}, Path=Dice.Log}" AlternationCount="2">
            <ListBox.ItemContainerStyle>
                <Style TargetType="{x:Type ListBoxItem}" BasedOn="{StaticResource {x:Type ListBoxItem}}">
                    <Setter Property="Padding" Value="0" />
                    <Style.Triggers>
                        <Trigger Property="ListBox.AlternationIndex" Value="2">
                            <Setter Property="Background" Value="DimGray" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>
    </Grid>
</Page>
